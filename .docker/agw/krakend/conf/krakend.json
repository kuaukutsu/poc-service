{
  "$schema": "https://www.krakend.io/schema/krakend.json",
  "version": 3,
  "name": "KrakenD - API Gateway",
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "extra_config": {
    "router": {
      "@comment": "The health endpoint",
      "health_path": "/health"
    },
    "telemetry/logging": {
      "level": "INFO",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true
    },
    "telemetry/metrics": {
      "collection_time": "60s",
      "listen_address": ":8090"
    },
    "telemetry/opentelemetry": {
      "service_name": "krakend_prometheus_service",
      "trace_sample_rate": 0.25,
      "metric_reporting_period": 1,
      "exporters": {
        "prometheus": [
          {
            "name": "prometheus_exporter",
            "port": 9090,
            "process_metrics": true,
            "go_metrics": true
          }
        ]
      }
    }
  },
  "router": {
    "disable_gzip": true
  },
  "endpoints": [
    {
      "endpoint": "/v1/login",
      "method": "POST",
      "extra_config": {
        "auth/signer": {
          "alg": "HS256",
          "kid": "sim2",
          "keys_to_sign": [
            "access_token",
            "refresh_token"
          ],
          "cache": false,
          "jwk_local_path": "symmetric.json",
          "disable_jwk_security": true,
          "operation_debug": true
        }
      },
      "backend": [
        {
          "url_pattern": "/login",
          "method": "POST",
          "host": [
            "http://poc_service_auth_nginx"
          ]
        }
      ]
    },
    {
      "endpoint": "/v1/info",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/",
          "encoding": "json",
          "method": "GET",
          "host": [
            "http://poc_service_info_nginx"
          ],
          "mapping": {
            "message": "name"
          }
        },
        {
          "url_pattern": "/info",
          "encoding": "json",
          "method": "GET",
          "host": [
            "http://poc_service_info_nginx"
          ],
          "mapping": {
            "message": "version"
          }
        }
      ]
    },
    {
      "endpoint": "/v1/compliance",
      "output_encoding": "no-op",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/",
          "encoding": "no-op",
          "method": "GET",
          "host": [
            "http://poc_service_compliance_nginx"
          ]
        }
      ],
      "extra_config": {
        "qos/ratelimit/router": {
          "@comment": "1 requests every 5 minutes",
          "client_max_rate": 10,
          "every": "5m",
          "key": "User-Agent",
          "strategy": "header"
        }
      }
    },
    {
      "endpoint": "/v1/compliance/{controller}",
      "output_encoding": "no-op",
      "method": "GET",
      "input_headers": [
        "X-User"
      ],
      "extra_config": {
        "auth/validator": {
          "alg": "HS256",
          "jwk_local_path": "symmetric.json",
          "roles_key": "roles",
          "roles": [
            "user",
            "admin"
          ],
          "operation_debug": true,
          "disable_jwk_security": true,
          "cache": false,
          "propagate_claims": [
            [
              "sub",
              "x-user"
            ]
          ]
        }
      },
      "backend": [
        {
          "url_pattern": "/{controller}",
          "encoding": "no-op",
          "method": "GET",
          "host": [
            "http://poc_service_compliance_nginx"
          ]
        }
      ]
    }
  ]
}
