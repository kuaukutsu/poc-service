{
  "$schema": "https://www.krakend.io/schema/krakend.json",
  "version": 3,
  "name": "KrakenD - API Gateway",
  "port": 8080,
  "host": ["http://agw.localhost:8080"],
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "extra_config": {
    "telemetry/logging": {
      "level": "INFO",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true
    }
  },
  "endpoints": [
    {
      "endpoint": "/v1/info",
      "output_encoding": "no-op",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/info",
          "encoding": "no-op",
          "method": "GET",
          "host": [
            "http://nginx"
          ]
        }
      ]
    }
  ]
}
