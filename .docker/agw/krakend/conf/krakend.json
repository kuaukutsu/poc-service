{
  "$schema": "https://www.krakend.io/schema/krakend.json",
  "version": 3,
  "name": "KrakenD - API Gateway",
  "port": 8080,
  "host": [
    "http://agw.localhost:8080"
  ],
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "extra_config": {
    "telemetry/logging": {
      "level": "INFO",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true
    }
  },
  "endpoints": [
    {
      "endpoint": "/v1/info",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/",
          "encoding": "json",
          "method": "GET",
          "host": [
            "http://poc_service_info_nginx"
          ],
          "mapping": {
            "message": "name"
          }
        },
        {
          "url_pattern": "/info",
          "encoding": "json",
          "method": "GET",
          "host": [
            "http://poc_service_info_nginx"
          ],
          "mapping": {
            "message": "version"
          }
        }
      ]
    },
    {
      "endpoint": "/v1/compliance",
      "output_encoding": "no-op",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/",
          "encoding": "no-op",
          "method": "GET",
          "host": [
            "http://poc_service_compliance_nginx"
          ]
        }
      ],
      "extra_config": {
        "qos/ratelimit/router": {
          "@comment":"1 requests every 5 minutes",
          "client_max_rate": 10,
          "every": "5m",
          "key": "User-Agent",
          "strategy": "header"
        }
      }
    }
  ]
}
